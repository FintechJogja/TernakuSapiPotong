<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_list_detail_ternak_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TernakPerah.ListDetailTernak.ListDetailTernakMain"
    tools:showIn="@layout/activity_list_detail_ternak_main">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:background="#80FFFFFF"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.36"
            android:background="@drawable/button_style"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="3dp"
            android:text="Filter"
            android:id="@+id/btnFilter" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.36"
            android:background="@drawable/button_style"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="3dp"

            android:text="Urutkan"
            android:id="@+id/btnUrut" />

    </LinearLayout>

    <Button
        android:text="Bersihkan Filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnclearfilter"
        android:background="#80FFFFFF"
        android:animateLayoutChanges="true"

        android:textColor="@color/colorPrimary"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <GridView
        android:id="@+id/list_listdetailternak_activity"
        android:layout_width="wrap_content"
        android:divider="@null"
        android:numColumns="2"
        android:dividerHeight="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView13"
        android:layout_above="@+id/linearLayout2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_below="@+id/btnclearfilter"
        android:layout_centerHorizontal="true"
        android:textSize="5sp" />


</RelativeLayout>
