<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detail_ternak_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TernakPerah.DetailTernak.DetailTernakMain"
    tools:showIn="@layout/activity_detail_ternak_main">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_detailternak_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"/>

    <com.gigamole.navigationtabbar.ntb.NavigationTabBar
        android:id="@+id/navigation_detailternak_activity"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        app:ntb_badge_gravity="top"
        app:ntb_badge_position="right"
        app:ntb_badged="true"
        app:ntb_badge_bg_color="@color/colorPrimary"
        app:ntb_badge_title_color="#fff"
        app:ntb_scaled="true"
        app:ntb_tinted="true"
        app:ntb_title_mode="all"
        app:ntb_titled="true"
        app:ntb_bg_color="#fff" />
</LinearLayout>
