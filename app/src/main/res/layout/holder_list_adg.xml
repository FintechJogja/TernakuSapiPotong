<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="4"
        android:elevation="5dp"
        android:background="#fff">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADG"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:fontFamily="casual" />
            <TextView
                android:id="@+id/holder_list_adg_nilaiadg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:fontFamily="casual" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            android:background="#ecf0f1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#fff">
                <TextView
                    android:id="@+id/holder_list_adg_idternak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  Id Ternak"
                    android:layout_marginLeft="3dp"
                    android:drawableLeft="@drawable/ic_tag_adg"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textAlignment="textStart"
                    android:textStyle="normal|bold"
                    android:fontFamily="casual" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:background="#fff"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:textAlignment="textEnd"
                            android:text="Tanggal Cek Sebelum"
                            android:textSize="10sp"/>
                        <TextView
                            android:id="@+id/holder_list_adg_tglsebelum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:textAlignment="textEnd"
                            android:textColor="#000"
                            android:text="02-11-2016"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/holder_list_adg_beratsebelum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="5dp"
                            android:textAlignment="textEnd"
                            android:textColor="#000"
                            android:text="5 Kilogram"
                            android:textSize="10sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:textAlignment="textEnd"
                            android:text="Berat Badan Sebelum"
                            android:textSize="10sp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="2dp"
                        android:background="#bdc3c7" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:textAlignment="textStart"
                            android:text="Tanggal Cek Terakhir"
                            android:textSize="10sp"/>
                        <TextView
                            android:id="@+id/holder_list_adg_tglterakhir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:textAlignment="textStart"
                            android:textColor="#000"
                            android:text="02-11-2016"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/holder_list_adg_beratterakhir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="5dp"
                            android:textAlignment="textStart"
                            android:textColor="#000"
                            android:text="5 Kilogram"
                            android:textSize="10sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:textAlignment="textStart"
                            android:text="Berat Badan Terakhir"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>