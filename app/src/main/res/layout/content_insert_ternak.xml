<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:layout_weight="1">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_insert_ternak"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="#e2e8e9"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".TernakPerah.Main.NavBar.Ternak.InsertTernak"
        tools:showIn="@layout/activity_insert_ternak">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:elevation="5dp"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dekatkan Tag RFID"
                android:id="@+id/txtRFID"
                android:textAlignment="center"
                android:maxLength="10"
                android:drawableLeft="@drawable/ic_action_barcode_2"
                android:drawableRight="@drawable/ic_action_barcode_2"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/btnPerbaharui"
                android:text="Perbaharui RFID"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#bdc3c7"
                android:textColor="@color/cardview_light_background" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:elevation="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Nama"
                android:textColor="@color/colorPrimary"
                android:id="@+id/textView3"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="Isikan nama ternak disini"
                android:id="@+id/nama_ternak"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp" />

            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#95a5a6"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:elevation="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Berat"
                android:textColor="@color/colorPrimary"
                android:id="@+id/textView3sdsd"
                android:layout_marginLeft="5dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="Isikan berat ternak disini"
                android:id="@+id/berat_ternak"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"/>

            <View
                android:id="@+id/view12"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#95a5a6"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:elevation="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Jenis Kelamin Ternak"
                android:textColor="@color/colorPrimary"
                android:id="@+id/textViewsd5"
                android:layout_marginLeft="5dp" />
            <RadioGroup
                android:id="@+id/radioSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/view2"
                android:layout_below="@+id/textView5"
                android:layout_marginLeft="5dp">
                <RadioButton
                    android:id="@+id/radioBetina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Betina"
                    android:checked="true"
                    android:layout_below="@+id/textView5"
                    android:layout_alignParentStart="true" />

                <RadioButton
                    android:id="@+id/radioJantan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jantan"
                    android:layout_below="@+id/radioBetina"
                    android:layout_alignParentStart="true"
                    android:checked="false" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:elevation="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Umur Ternak"
                android:textColor="@color/colorPrimary"
                android:id="@+id/textViewsd5we"
                android:layout_marginLeft="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtTgl"
                    android:hint="Isikan Umur Ternak Disini"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <View
                android:id="@+id/view3"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#95a5a6"
                android:layout_marginTop="10dp" />
        </LinearLayout>
        <Button
            android:id="@+id/btnInsertTernak"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/btn_login"
            android:text="Simpan"
            android:textColor="@color/cardview_light_background"
            android:layout_marginTop="36dp" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
