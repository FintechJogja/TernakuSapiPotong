<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:background="#ecf0f1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tgltask_taskdetail_activity_txt"
            android:drawableLeft="@drawable/ic_action_calendar_month"
            android:text="Tanggal Buat"
            android:gravity="center_vertical"
            android:textAppearance="@android:style/TextAppearance.Small" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#fff"
            android:layout_marginRight="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/isitask_taskdetail_activity_txt"
            android:drawableLeft="@drawable/ic_action_info"
            android:text="Isi"
            android:maxLines="3"
            android:gravity="center_vertical"
            android:textAppearance="@android:style/TextAppearance.Small" />
    </LinearLayout>

</LinearLayout>