<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Batal"
        android:id="@+id/btnBatal"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnPilih"
        android:layout_below="@+id/btnPilih"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:layout_alignEnd="@+id/btnPilih" />

    <NumberPicker
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker"
        android:scaleX="1.0"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih"
        android:id="@+id/btnPilih"
        android:layout_alignTop="@+id/textView50"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/numberPicker" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView50"
        android:layout_below="@+id/numberPicker"
        android:layout_centerHorizontal="true" />


</RelativeLayout>