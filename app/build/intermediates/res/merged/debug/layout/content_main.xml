<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs_main_activity"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:backgroundTint="#FFFFFF"
        app:tabGravity="fill"
        app:tabMode="scrollable"
        android:background="@color/colorPrimary" />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_main_activity"
        android:layout_width="match_parent"
        android:textColor="#FFFFFF"
        android:layout_height="270dp"
        android:backgroundTint="#FFFFFF"

        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_weight="1.06"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tabs_main_activity" />


    <com.gigamole.navigationtabbar.ntb.NavigationTabBar
        android:id="@+id/navigation_main_activity"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        gauge:ntb_scaled="true"
        gauge:ntb_tinted="true"
        gauge:ntb_title_mode="all"
        gauge:ntb_titled="true"
        gauge:ntb_bg_color="#fff"
        gauge:ntb_animation_duration="0"/>

</LinearLayout>
