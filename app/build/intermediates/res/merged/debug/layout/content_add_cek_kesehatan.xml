<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#e2e8e9"

    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:layout_weight="1">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android"
            tools:showIn="@layout/activity_add_mengandung"
            android:background="#e2e8e9"
            android:id="@+id/relativeLayout_addmengandung_tglperkiraan">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:elevation="5dp"
                    android:background="#FFFFFF">
                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/input_addcekkesehatan_activity_idternak"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:hint="Ketikkan ID Sapi atau Scan RFID"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="#FFFFFF"
                    android:elevation="5dp"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Periksa"
                            android:textColor="@color/color_primary_kesehatan"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView13"
                                android:src="@drawable/ic_action_calendar_month"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp" />
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/input_addcekkesehatan_activity_tglpemeriksaan"
                                android:hint="Pilih kandang"
                                android:textSize="18dp"
                                android:focusable="false"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_toEndOf="@+id/imageView13"
                                android:layout_gravity="center_vertical"
                                android:text="01 Januari 1970" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="#FFFFFF"
                    android:elevation="5dp"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kondisi Fisik"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/color_primary_kesehatan"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/textView2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp" >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Suhu Badan"
                                android:textColor="@color/color_primary_kesehatan"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp" />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/input_addcekkesehatan_activity_suhubadan"
                                android:gravity="top|left"
                                android:layout_marginLeft="5dp"
                                android:textSize="18dp"
                                android:inputType="number" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp" >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Berat Badan"
                                android:textColor="@color/color_primary_kesehatan"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp" />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/input_addcekkesehatan_activity_beratbadan"
                                android:gravity="top|left"
                                android:layout_marginLeft="5dp"
                                android:textSize="18dp"
                                android:inputType="number" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp" >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tinggi Badan"
                                    android:textColor="@color/color_primary_kesehatan"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Panjang Badan"
                                    android:textColor="@color/color_primary_kesehatan"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/input_addcekkesehatan_activity_tinggibadan"
                                    android:gravity="top|left"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="18dp"
                                    android:inputType="number"
                                    android:layout_weight="1"  />
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/input_addcekkesehatan_activity_panjangbadan"
                                    android:gravity="top|left"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="18dp"
                                    android:inputType="number"
                                    android:layout_weight="1"  />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp" >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Aktivitas"
                                android:textColor="@color/color_primary_kesehatan"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp" />
                            <android.support.v7.widget.AppCompatSpinner
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/spinner_addcekkesehatan_activity_aktivitas"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:spinnerMode="dialog" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp" >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Status Fisik"
                                android:textColor="@color/color_primary_kesehatan"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp" />
                            <android.support.v7.widget.AppCompatSpinner
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/spinner_addcekkesehatan_activity_statusfisik"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:spinnerMode="dialog" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp" >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Status Stress"
                                android:textColor="@color/color_primary_kesehatan"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp" />
                            <android.support.v7.widget.AppCompatSpinner
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/spinner_addcekkesehatan_activity_statusstress"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:spinnerMode="dialog" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp" >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Produksi Susu"
                                android:textColor="@color/color_primary_kesehatan"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp" />
                            <android.support.v7.widget.AppCompatSpinner
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/spinner_addcekkesehatan_activity_produksisusu"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:spinnerMode="dialog" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp" >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kondisi Tubuh"
                                android:textColor="@color/color_primary_kesehatan"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="0"
                                android:id="@+id/input_addcekkesehatan_activity_conditionscore"
                                android:layout_marginTop="10dp"
                                android:textSize="30dp"
                                android:textAlignment="center" />
                            <SeekBar
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/seekbar_addcekkesehatan_activity_aktivitas"
                                android:layout_marginTop="20dp"
                                android:max="10"
                                android:indeterminate="false"
                                android:layout_marginBottom="20dp" />
                            </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:id="@+id/button_addcekkesehatan_activity_simpan"
            android:textColor="#FFFFFF"
            android:background="@color/color_primary_kesehatan"
            android:layout_gravity="bottom|center"

            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:elevation="10dp"
            />
    </RelativeLayout>

</LinearLayout>
